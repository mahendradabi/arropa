<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:focusable="false"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="5dp">


                <EditText
                    android:id="@+id/etName"
                    style="@style/mEditText"
                    android:editable="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter  Name"
                    android:inputType="text"
                    android:textSize="14sp" />

                <EditText
                    android:editable="false"
                    android:id="@+id/etEmail"
                    style="@style/mEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Email"
                    android:inputType="textEmailAddress"
                    android:textSize="14sp" />

                <EditText
                    android:editable="false"
                    android:id="@+id/etCarNo"
                    style="@style/mEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Adhaar card no."
                    android:inputType="number"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/etMobile"
                    style="@style/mEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Mobile"
                    android:inputType="phone"
                    android:textSize="14sp" />


                <EditText
                    android:id="@+id/etShopName"
                    style="@style/mEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter shop name"
                    android:inputType="text"
                    android:textSize="14sp" />



                <EditText
                    android:id="@+id/etShopAddress"
                    style="@style/mEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Shop Address"
                    android:inputType="text"
                    android:textSize="14sp" />


                <EditText
                    android:id="@+id/etResAddress"
                    style="@style/mEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Residential address"
                    android:inputType="text"
                    android:textSize="14sp" />


                <EditText
                    android:id="@+id/etCity"
                    style="@style/mEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="City"
                    android:inputType="text"
                    android:textSize="14sp" />


                <EditText
                    android:id="@+id/etState"
                    style="@style/mEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="State"
                    android:inputType="text"
                    android:textSize="14sp" />


                <EditText
                    android:id="@+id/etPincode"
                    style="@style/mEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Pincode"
                    android:inputType="text"
                    android:textSize="14sp" />


                <EditText
                    android:id="@+id/etPassword"
                    style="@style/mEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Password"
                    android:inputType="textPassword"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/updateProfile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/inverse_button"
                    android:text="Update Profile"
                    android:textColor="@color/white" />



            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</LinearLayout>